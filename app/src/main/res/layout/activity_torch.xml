<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/to"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rohitsinghal.minitask.Torch">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Torch OFF"
        android:id="@+id/button19"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#1ef5d4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Torch ON"
        android:id="@+id/button20"
        android:layout_below="@+id/button19"
        android:layout_alignLeft="@+id/button19"
        android:layout_alignStart="@+id/button19"
        android:layout_marginTop="149dp"
        android:background="#1ef5d4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch to Logout"
        android:id="@+id/button21"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button20"
        android:layout_marginBottom="39dp"
        android:layout_toRightOf="@+id/button20"
        android:background="#1ef5d4" />
</RelativeLayout>
